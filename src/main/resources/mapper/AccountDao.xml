<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kingland.mapper.AccountMapper">

    <resultMap id="BaseResultMap" type="com.kingland.domian.Account">
        <result column="username" property="username"/>
        <result column="password" property="password"/>
    </resultMap>


        <sql id="Base_Column_List">
            username,password
        </sql>

    <select id="findAccountByName" resultType="com.kingland.domian.Account">
        select
        <include refid="Base_Column_List"/>
        from accounts
        where username = #{username}

    </select>

    <select id="getAllAccounts" resultType="com.kingland.domian.Account">
        select
        <include refid="Base_Column_List"/>
        from accounts
    </select>

</mapper>